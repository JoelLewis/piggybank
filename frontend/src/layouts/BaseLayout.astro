---
import { DollarSign, Settings } from 'lucide-react';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Piggybank - Family Finance" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-slate-50 text-slate-900 font-sans min-h-screen">
		<nav class="max-w-6xl mx-auto flex items-center justify-between p-4 md:p-8 mb-4">
			<a href="/" class="flex items-center gap-3 cursor-pointer hover:opacity-80 transition-opacity">
				<div class="w-10 h-10 bg-indigo-600 rounded-xl flex items-center justify-center text-white shadow-xl shadow-indigo-100">
					<DollarSign size={24} stroke-width={3} />
				</div>
				<span class="font-black text-2xl tracking-tighter text-slate-800">PIGGYBANK</span>
			</a>
			<div class="flex items-center gap-4">
				<a href="/settings" class="p-3 bg-white border border-slate-100 rounded-2xl text-slate-400 hover:text-indigo-600 transition-colors shadow-sm">
					<Settings size={20} />
				</a>
			</div>
		</nav>
		
		<main class="max-w-6xl mx-auto p-4 md:p-8">
			<slot />
		</main>
	</body>
</html>

<style is:global>
	/* Custom fonts or global styles can go here */
</style>
